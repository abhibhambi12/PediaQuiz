rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    match /{document=**} {
      allow read, write: if false;
    }
    
    function isAdmin() {
      return request.auth != null && request.auth.token.isAdmin == true;
    }

    function canReadContent() {
      return request.auth != null;
    }
    
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/attemptedMCQs/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/attemptedFlashcards/{docId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/quizResults/{docId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
    }
    
    match /Topics/{topicId} {
      allow read: if canReadContent();
      allow write: if isAdmin();
    }
    
    match /MarrowTopics/{topicId} {
      allow read: if canReadContent();
      allow write: if isAdmin();
    }
    
    match /MasterMCQ/{mcqId} {
      allow read: if canReadContent();
      allow write: if isAdmin();
    }
    
    match /MarrowMCQ/{mcqId} {
      allow read: if canReadContent();
      allow write: if isAdmin();
    }
    
    match /Flashcards/{flashcardId} {
      allow read: if canReadContent();
      allow write: if isAdmin();
    }
    
    match /KeyClinicalTopics/{topicId} {
      allow read: if canReadContent();
      allow write: if isAdmin();
    }
    
    match /quizSessions/{sessionId} {
      allow read, write, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
    }
    
    match /userUploads/{uploadId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
  }
}