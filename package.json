{
  "name": "pediaquiz",
  "private": true,
  "workspaces": [
    "frontend",
    "functions",
    "packages/types"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:functions": "npm run build --workspace=functions",
    "dev": "npm run dev --workspace=frontend",
    "clean": "rm -rf node_modules && find . -name 'node_modules' -type d -prune -exec rm -rf '{}' + && find . -name 'package-lock.json' -type f -delete && npm cache clean --force",
    "firebase": "firebase",
    "deploy": "firebase deploy",
    "deploy:functions": "bash ./deploy-functions.sh"
  },
  "devDependencies": {
    "firebase-tools": "^13.13.2",
    "typescript": "^5.4.5"
  }
}