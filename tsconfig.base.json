{
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "ES2021",
      "DOM",
      "DOM.Iterable"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    // Ensure that 'paths' is correctly configured if it was present previously
    // This allows absolute imports like '@/components'
    "paths": {
      "@/*": [
        "./frontend/src/*"
      ] // Assuming a common base for paths in frontend
    }
  }
}